<div class="con_width">
  <div class="page_current"> <span>YOUR CURRENT LOCATIONï¼š</span> <span><a href="#">HOME</a> > </span> <span class="pc_con">RED</span> </div>
  <div class="wine_choose">
    <div class="wch_bg">
      <table width=100%>
         <tr>
           <td>STYLE</td>
           <td>
             <%= style_tree %>
           </td>
         </tr>
        <tr>
          <td>REGION</td>
          <td>
            <%= region_tree %>
          </td>
        </tr>

        <tr>
          <td>VARIETY</td>
          <td>
            <%= variety_tree %>
          </td>
        </tr>
        <tr>
          <td>PRICE</td>
          <td>
            <%= render :partial => 'spree/shared/filters' if @taxon.children.empty? %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="rw_list">
    <div class="rl_right">
      <div class="rlr_title"><h1 class="taxon-title"><%= @taxon.name %></h1> </div>

      <%
         paginated_products = @searcher.retrieve_products if params.key?(:keywords)
         paginated_products ||= @products
      %>
      <% if @products.empty? %>
        <%= Spree.t(:no_products_found) %>
      <% elsif params.key?(:keywords) %>
        <h6 class="search-results-title"><%= Spree.t(:search_results, :keywords => h(params[:keywords])) %></h6>
      <% end %>

      <% if @products.any? %>
        <ul class="rlr_con">
          <% @products.each do |product| %>
            <li id="product_<%= product.id %>" class="columns three <%= cycle("alpha", "secondary", "", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
          <span class="rlc_img">
             <%= link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url', :size => '170x192' %>
          </span>
              <span class="rlc_name"> <%= link_to truncate(product.name, :length => 50), product, :class => 'info', :itemprop => "name", :title => product.name %></span>
              <span class="rlc_sz"><%= display_price(product) %></span>
            </li>
          <% end %>
        </ul>
      <% end %>
      <div class="rlr_page">
        <% if paginated_products.respond_to?(:num_pages) %>
          <%= paginate paginated_products %>
        <% end %>
      </div>
      <div class="rlt_bottom"></div>
    </div>
  </div>
</div>

